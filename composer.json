{
    "scripts": {
        "test": "./vendor/bin/phpunit ./tests/",
        "fix-code": "./vendor/bin/php-cs-fixer fix . --rules=@PSR12"
    },
    "autoload": {
        "psr-4": {
            "App\\Client\\": "src/Client"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\Client\\": "tests/Client",
            "App\\Client\\": "src/Client"
        }
    },
    "require": {
        "psr/http-client": "^1.0",
        "psr/http-message": "^1.0",
        "nyholm/psr7": "^1.5",
        "psr/http-factory": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "friendsofphp/php-cs-fixer": "^3.13"
    }
}
